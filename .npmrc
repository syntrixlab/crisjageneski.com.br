# Configuração para garantir instalação local de dependências
# Evita hoisting e problemas com node_modules em diretórios pais

# Layout de node_modules sem hoisting (todas as deps na própria pasta)
install-strategy=nested

# Garantir instalação completa
prefer-offline=false
audit=false
fund=false

# Engine strict para garantir compatibilidade
engine-strict=true
