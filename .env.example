# =====================================================
# VPS/PRODUCTION CONFIGURATION
# =====================================================
# Copy this file to .env and fill real values.
# This root .env is used by Node/Express (server runtime).

# Server
NODE_ENV=production
# PORT is usually injected by the VPS/process manager.
# Keep empty unless your environment requires a fixed port.
# PORT=4000
DATABASE_URL="postgresql://user:password@host:5432/database"
JWT_SECRET="generate_a_secure_random_secret_min_16_chars"
SUPABASE_URL="https://yourproject.supabase.co"
SUPABASE_SERVICE_ROLE_KEY="your_service_role_key"
SUPABASE_STORAGE_BUCKET="site-media"
REDIS_URL="rediss://:password@redis-host:6379" # optional
REDIS_PREFIX="cris-site"
CACHE_TTL_NAV=3600
CACHE_TTL_HOME=3600
CACHE_TTL_PAGE=600
CACHE_TTL_POST=600
CACHE_TTL_POSTS_LIST=600
UPLOAD_MAX_FILE_SIZE_MB=5
ALLOWED_IMAGE_MIME_TYPES="image/jpeg,image/png,image/webp"
ADMIN_EMAIL=admin@yourdomain.com
ADMIN_PASSWORD=change_this_in_production

# Frontend (Vite) variables:
# Put these in client/.env.production (or client/.env) before running build.
# VITE_API_URL controls API endpoint used by frontend.
# - Same domain deployment: /api
# - Separate API domain: https://api.yourdomain.com/api
# VITE_PUBLIC_URL controls the "View site" public URL in admin.
# - Example: https://yourdomain.com
